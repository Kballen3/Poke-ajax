<h1>Pokemon Gotta Catch 'em All!</h2>
<hr />
<div class="row">
    <div class="col s12 m6">
        <button class="btn" id="toggle">Add More Pokemon</button>
        <ul id="pokemons-list">
            <% @pokemons.each do |pokemon| %>
                <li
                class="pokemon-item"
                data-id=<%= pokemon.id %>
                >
                    <%= pokemon.name %>
                </li>
            <% end %>
        </ul>
    </div>
    <div class="row" id="move-list">
        <h3 id="pokemon">Battle Moves!</h2>
        <ul id="moves">
        </ul>
        </div>
    </div>
</div>
